@model projectdotnet.Models.Models.Vm_Offer;

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            فرم های عمومی
            <small>مثال ها</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">فرم ها</a></li>
            <li class="active">عمومی</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-5">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">مثال ساده</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form action="/admin/offer/edit" enctype="multipart/form-data" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label>عنوان</label>
                                <input asp-for="Vm_Title" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>توضیحات</label>
                                <input  asp-for="Vm_Detail" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>لینک</label>
                                <input  asp-for="Vm_Link" type="text" class="form-control">
                            </div>     
                            <img src="@Model.Vm_Image" width="60px" alt="">
                             <input type="file" asp-for="Vm_Img">
                             <input type="text" asp-for="Vm_Id" hidden>
                             <h4 class="text-danger">در صورت عدم انتخاب عکس جدید,عکس قبلی ذخیره می شود!</h4>
                           @* <div class="form-group">
                             <label>ارسال فایل</label>

                               <input   asp-for="Vm_Img" type="file">

                                <p class="help-block">عکس خود را انتخاب کنید</p>
                            </div>
                        </div>*@
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-xl btn-primary">ارسال</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>