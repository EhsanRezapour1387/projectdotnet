

@model projectdotnet.Models.Models.Vm_User;

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            فرم های عمومی
            <small>مثال ها</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
            <li><a href="#">فرم ها</a></li>
            <li class="active">عمومی</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-5">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">مثال ساده</h3>
                    </div>
                    <form action="/admin/Login/check" enctype="multipart/form-data" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label>Username</label>
                                <input asp-for="Vm_UserName" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>password</label>
                                <input  asp-for="Vm_Password" type="password" class="form-control">
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-xl btn-primary">ارسال</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
